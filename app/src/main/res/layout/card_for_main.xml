<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_card_view_height"
        app:cardCornerRadius="@dimen/main_card_ele_size"
        app:cardElevation="@dimen/main_card_ele_size">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_card_head_height"
                android:orientation="horizontal"
                android:padding="@dimen/main_card_head_text_size"
                android:weightSum="1"

                >

                <android.support.v7.widget.CardView
                    android:id="@+id/view2"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_weight=".3"
                    android:elevation="12dp"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    android:src="@drawable/backtest"
                    android:thicknessRatio="1.9"
                    app:cardCornerRadius="40dp">

                    <ImageView
                        android:id="@+id/home_head_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true">

                    </ImageView>
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/main_date_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".4"
                    android:text="11/06/2017 , 3:00:00;"
                    android:textSize="@dimen/main_card_head_text_size" />
            </LinearLayout>

            <ImageView
                android:id="@+id/home_main_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_card_image_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_card_bottom_height"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:gravity="center"
                    android:text="like" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:gravity="center"
                    android:text="download"


                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:gravity="center"
                    android:text="share" />

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>